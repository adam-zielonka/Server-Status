{
  "name": "@server-status/api",
  "version": "0.1.10",
  "description": "api for retrieving server status information",
  "main": "./dist/index.js",
  "scripts": {
    "start": "nodemon -e js,ts,gql --watch src --exec \"yarn build && yarn serve\"",
    "build": "babel src --out-dir dist",
    "prebuild": "yarn clear",
    "postbuild": "find src/ -type f | grep -i .gql$ | cut -c 5- | xargs -i cp src/{} dist/{}",
    "prepublish": "yarn build",
    "serve": "node dist/start.js",
    "clear": "rm -fr dist",
    "test": "jest",
    "lint": "eslint ."
  },
  "keywords": [
    "server",
    "status",
    "monitor",
    "stats"
  ],
  "author": "Adam Zielonka <root@adamzielonka.pro>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/server-status/server-status-api"
  },
  "dependencies": {
    "apollo-server": "^2.13.1",
    "graphql": "^15.0.0",
    "is-port-reachable": "^3.0.0",
    "jsonwebtoken": "^8.5.1",
    "regenerator-runtime": "^0.13.5",
    "request": "^2.88.2",
    "request-promise": "^4.2.5",
    "systeminformation": "^4.26.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.6",
    "eslint": "^7.1.0",
    "jest": "^26.0.1",
    "nodemon": "^2.0.4"
  }
}

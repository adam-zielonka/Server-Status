@import '../node_modules/@blueprintjs/icons/lib/css/blueprint-icons.css'
@import '../node_modules/@blueprintjs/core/lib/css/blueprint.css'

.board
  display grid
  grid-template-columns 33.33% 66.66%

.board-2
  display grid
  grid-template-columns 50% 50%

.item
  margin 5px

.nav
  position sticky
  top 0
  z-index 1020

.table 
  width: 100%;

.progress-bar
  color #fff
  width 100%
  height 1.5rem

.progress-meter
  text-align center
  justify-content center
  display flex
  flex-direction: column

.badge
  display inline-block
  padding .25em .4em
  font-size 80%
  font-weight 700
  line-height 1
  text-align center
  white-space nowrap
  vertical-align baseline
  border-radius .25rem
  color white
  margin-left .25rem

th
  text-align left
